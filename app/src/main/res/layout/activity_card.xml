<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<!--    <data>-->
<!--        <variable-->
<!--            name="activity"-->
<!--            type="" />-->
<!--    </data>-->


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:backgroundTint="#61FFFFFF"
    app:cardBackgroundColor="#61FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/activity_name"
            android:layout_width="287dp"
            android:layout_height="30dp"
            android:fontFamily="@font/lora_bold"
            android:text="Activity Name"
            android:textColor="#2c2c2c"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/activity_description"
            android:layout_width="436dp"
            android:layout_height="154dp"
            android:fontFamily="@font/lora"
            android:text="Description"
            android:textColor="#2c2c2c"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activity_price"
            android:layout_width="31dp"
            android:layout_height="28dp"
            android:fontFamily="@font/lora_bold"
            android:text="Â£"
            android:textColor="#2c2c2c"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.032"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.112" />

        <ImageView
            android:id="@+id/image_add_event"
            android:layout_width="32dp"
            android:layout_height="25dp"
            android:clickable="true"
            android:contentDescription="Add event"
            android:src="@drawable/add_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.051" />

        <Button
            android:id="@+id/button_afternoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f2f2f2"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Afternoon"
            android:textColor="#2c2c2c"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.464"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.955" />

        <Button
            android:id="@+id/button_evening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f2f2f2"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Evening"
            android:textColor="#2c2c2c"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.946"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.955" />

        <Button
            android:id="@+id/button_morning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f2f2f2"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Morning"
            android:textColor="#2c2c2c"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.955" />

<!--        Restaurants Opening Hours -->
        <TextView
            android:id="@+id/opening_hours"
            android:layout_width="379dp"
            android:layout_height="44dp"
            android:text="Opening hours: "
            android:textSize="14sp"
            android:visibility="gone"
            android:backgroundTint="#f2f2f2"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="#2c2c2c"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.226"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.956" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</layout>