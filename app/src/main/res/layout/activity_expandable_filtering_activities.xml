<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Restaurant ExpandableListView -->
    <ExpandableListView
        android:id="@+id/expandableListViewRestaurantsFiltering"
        android:backgroundTint="@color/design_default_color_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="2dp"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" />

    <!-- Activities ExpandableListView -->
    <ExpandableListView
        android:id="@+id/expandableListViewActivitiesFiltering"
        android:backgroundTint="@color/design_default_color_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="2dp"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" />

    <!-- Buttons to dynamically add/remove items -->
    <Button
        android:id="@+id/addGroupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Group" />

    <Button
        android:id="@+id/addChildButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Child to Group 1" />

    <Button
        android:id="@+id/removeChildButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Last Child from Group 1" />
</LinearLayout>
